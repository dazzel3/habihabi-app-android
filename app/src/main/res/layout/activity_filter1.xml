<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Filter1">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/habihabi1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/circle" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/circle_blank" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="당신의 성별을 알려주세요."
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/man"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:text="남"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/waman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:text="당신의 나이대를 알려주세요."
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="10대"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/twenty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="20대"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/thirty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="30대"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/fourty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="40대"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/fifty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50대"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="3dp"
            android:text="당신이 취미에 들일 수 있는 비용은 어느정도 인지"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cost3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알려주세요."
                android:textColor="@color/gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cost2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="* 옆으로  스와이프하면 더 많은 보기가 있어요."
                android:textColor="#B5B5B5"
                android:textSize="12sp" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/cost_zero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="0원"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/cost_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="1만원"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/cost_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="3만원"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/cost_five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="5만원"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/cost_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="10만원"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/cost_fifteen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15만원"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

                <RadioButton
                    android:id="@+id/cost_infinity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15만원 이상"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    app:buttonTint="@color/blue" />

            </RadioGroup>
        </HorizontalScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/next_btn2"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="다음"
        android:textSize="15sp"
        android:textStyle="bold"
        app:backgroundTint="@color/blue" />

</LinearLayout>